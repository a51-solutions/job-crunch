// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.
{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "rules": {
    // START try turning these back on
    "no-nested-ternary": 0,
    "no-unused-vars": 0,
    "no-useless-return": 0,
    "no-else-return": 0,
    "prefer-const": 0,
    "block-scoped-var": 0,
    "operator-linebreak": ["error", "before"],
    "no-param-reassign": 0,
    // END try turning these back on

    // START turn these on later. But it might be time consuming
    "no-multi-str": 0,
    "no-shadow": 0,
    "no-redeclare": 0,
    // END turn these on later. But it might be time consuming

    "arrow-body-style": 1,
    "one-var-declaration-per-line": 1,
    "nonblock-statement-body-position": 1,
    "key-spacing": 1,
    "object-curly-spacing": 1,
    "function-paren-newline": 1,
    "keyword-spacing": 1,
    "padded-blocks": 1,
    "quote-props": 1,
    "no-useless-concat": 1,
    "template-curly-spacing": 1,
    "one-var": 1,
    "camelcase": 1,
    "brace-style": 1,
    "consistent-return": 1,
    "no-useless-escape": 1,
    "prefer-destructuring": 0, // this is annoying
    "object-shorthand": 0, // breaks hypens at the end of regex
    "no-multiple-empty-lines": 1,
    "import/no-cycle": 1,
    "no-mixed-operators": 1,
    "no-unreachable": 1,
    "no-use-before-define": 1,
    "no-restricted-syntax": 0,
    "no-prototype-builtins": 0,
    "no-global-assign": 1,
    "no-cond-assign": 0,
    "no-return-assign": 1,
    "no-unused-expressions": 1,
    "operator-assignment": 1,
    "no-fallthrough": 1,
    "no-inner-declarations": 1,
    "no-loop-func": 1,
    "import/no-named-as-default": 1,
    "import/no-named-as-default-member": 1,
    "import/no-unresolved": 1,
    "no-const-assign": 1,
    "import/no-useless-path-segments": 1,
    "import/no-self-import": 1,
    "import/no-extraneous-dependencies": 1,
    "wrap-iife": 0,
    "import/named": 1,
    "no-buffer-constructor": 1,
    "arrow-parens": 1,
    "semi-spacing": 1,
    "no-extra-semi": 1,
    "comma-dangle": 1,
    "no-unneeded-ternary": 1,
    "default-case": 1,
    "no-undef": 1,
    "valid-typeof": 1,
    "curly": 0,
    "import/no-duplicates": 1,
    "no-empty": 0,
    "dot-notation": 1,
    "block-spacing": [1, "always"],
    "quotes": 1,
    "indent": 1,
    "comma-spacing": 1,
    "spaced-comment": 1,
    "space-before-blocks": 1,
    "no-trailing-spaces": 1,
    "no-multi-spaces": 1,
    "space-unary-ops": 1,
    "space-infix-ops": 1,

    "space-before-function-paren": 0,
    "no-continue": 0,
    "import/order": 0,
    "eqeqeq": 0,
    "func-names": 0,
    "no-restricted-globals": 0,
    "radix": 0,
    "no-var": 0,
    "import/newline-after-import": 0,
    "prefer-template": 0,
    "no-path-concat": 0,
    "vars-on-top": 0,
    "prefer-arrow-callback": 0,
    
    "linebreak-style": 0,
    // "react/jsx-filename-extension": 0,
    "semi": 1,
    "no-plusplus": 0,
    "class-methods-use-this": 0,
    "no-underscore-dangle": 0,
    // "no-unused-vars": ["warn", {"args": "none"}],
    // "react/forbid-prop-types": 0,
    "no-console": 0,
    "require-yield": 1,
    "max-len": 0,
    "no-await-in-loop": 1,
    "no-debugger": 0,
    "import/extensions": 0,
    "import/prefer-default-export": 0,
    // "react/no-unused-prop-types": 0,
    "jsx-a11y/href-no-hash": "off",
    "global-require": 0,
    // "react/no-string-refs": 0,
    // "react/prefer-stateless-function": 0, /* this conflicts with our desire to have prop types on pure components */
    "no-lonely-if": 0,
    // "react/no-array-index-key": 0
  },
  "globals": {
    "__DEV__": true,
    "__PROD__": true,
    "fetch": true,

    /* Defined by detox */
    "describe": true,
    "expect": true,
    "after": true,
    "afterEach": true,
    "before": true,
    "beforeEach": true,
    "done": true,
    "it": true,
    "element": true,
    "by": true,
    "device": true
  },
  "settings": {
    "import/resolver": {
      // "reactnative": {},
      "babel-module": {
        "root": ["./app"],
        "extensions": [".js", ".ios.js", ".android.js"]
      }
    }
  }
}
